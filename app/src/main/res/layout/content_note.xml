<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kingsoftstar.notebook.NoteActivity"
    tools:showIn="@layout/activity_note">

    <EditText
        android:id="@+id/edit_text_note_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_note_title_height"
        android:hint="@string/edit_text_hint_note_title"
        android:maxLines="1"
        android:scrollbars="horizontal" />

    <EditText
        android:id="@+id/edit_text_note_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:hint="@string/edit_text_hint_note_content"
        android:scrollbars="vertical" />
</LinearLayout>
